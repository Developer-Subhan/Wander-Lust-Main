<% layout("layouts/boilerplate") %>

    <!-- Edit Listing Form -->
    <div class="row mt-3">
        <div class="col-10 offset-1">
            <h1>Edit your listing</h1>

            <form action="/listing/<%= listing._id %>?_method=PATCH" method="POST" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <!-- Title Field -->
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">Title is required!</div>
                </div>

                <!-- Description Field -->
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control"
                        required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Enter short description!</div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-select" aria-label="Default select example" name="listing[category]">
                        <option value="">-- Select a category --</option>
                        <option value="Hotel" <%=listing.category==="Hotel" ? "selected" : "" %>>Hotel</option>
                        <option value="Adventure" <%=listing.category==="Adventure" ? "selected" : "" %>>Adventure
                        </option>
                        <option value="Resort" <%=listing.category==="Resort" ? "selected" : "" %>>Resort</option>
                        <option value="Beach-Related" <%=listing.category==="Beach-Related" ? "selected" : "" %>>Beach
                            Related</option>
                        <option value="Restaurant" <%=listing.category==="Restaurant" ? "selected" : "" %>>Restaurant
                        </option>
                        <option value="Other" <%=listing.category==="Other" ? "selected" : "" %>>Other</option>
                    </select>
                    <div class="invalid-feedback">Category is required!</div>
                </div>

                <div class="mb-3">
                    Original Image:
                    <br>
                    <img src="<%= originalImageUrl %>" alt="previous_image_preview">
                </div>

                <!-- Image URL Field -->
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" name="listing[image]" value="<%= listing.image %>" class="form-control">
                </div>

                <!-- Price and Location Row -->
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price(Rs)</label>
                        <input type="number" name="listing[price]" placeholder="Enter price" class="form-control"
                            value="<%= listing.price %>" min="0" required>
                        <div class="invalid-feedback">Price should be valid!</div>
                    </div>

                    <div class="mb-3 col-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control"
                            value="<%= listing.location %>" required>
                        <div class="invalid-feedback">Location should be valid!</div>
                    </div>
                </div>

                <!-- Country Field -->
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control"
                        value="<%= listing.country %>" required>
                    <div class="invalid-feedback">Country should be valid!</div>
                </div>

                <!-- Submit Button -->
                <button class="btn btn-dark edit-btn mt-3"><i
                        class="fa-solid fa-pen-to-square"></i>&nbsp;&nbsp;Edit</button>
                <br>
            </form>
            <br>
        </div>
    </div>