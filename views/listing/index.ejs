<% layout("layouts/boilerplate") %>

<style>
    :root {
        --accent-color: #ff385c;
        --text-main: #222222;
        --text-muted: #717171;
        --card-shadow: 0 6px 16px rgba(0,0,0,0.12);
    }

    /* Modern Filter Bar */
    #filters {
        display: flex;
        align-items: center;
        overflow-x: auto;
        padding: 1.25rem 0;
        gap: 2.5rem;
        scrollbar-width: none;
    }

    #filters::-webkit-scrollbar { display: none; }

    .filter {
        text-align: center;
        color: var(--text-muted);
        transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border-bottom: 2px solid transparent;
        padding-bottom: 8px;
        min-width: fit-content;
    }

    .filter:hover {
        color: var(--text-main);
        border-bottom: 2px solid #ddd;
        cursor: pointer;
    }

    .filter i {
        font-size: 1.4rem;
        margin-bottom: 0.5rem;
        display: block;
    }

    .filter p {
        font-size: 0.75rem;
        font-weight: 600;
        margin: 0;
        letter-spacing: 0.2px;
    }

    /* Aesthetic Tax Toggle */
    .tax-toggle {
        background: #ffffff;
        border: 1px solid #e2e2e2;
        border-radius: 12px;
        padding: 0.8rem 1.2rem;
        box-shadow: 0 3px 8px rgba(0,0,0,0.04);
        display: flex;
        align-items: center;
        height: 52px;
    }

    .form-check-input:checked {
        background-color: var(--accent-color);
        border-color: var(--accent-color);
    }

    /* Card & Grid Refinement */
    .listing-link { text-decoration: none; }

    .listing-card {
        border: none !important;
        background: transparent;
        margin-bottom: 2.5rem;
    }

    .img-container {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        aspect-ratio: 1 / 1; /* Makes all images perfectly square */
    }

    .listing-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .listing-card:hover img {
        transform: scale(1.06);
    }

    /* Wishlist Heart Overlay (Aesthetic touch) */
    .heart-icon {
        position: absolute;
        top: 15px;
        right: 15px;
        color: white;
        font-size: 1.2rem;
        text-shadow: 0 0 5px rgba(0,0,0,0.3);
    }

    .card-body {
        padding: 12px 0 0 0 !important;
    }

    .listing-title {
        font-weight: 600;
        color: var(--text-main);
        font-size: 1rem;
        margin-bottom: 2px;
    }

    .listing-location {
        color: var(--text-muted);
        font-size: 0.95rem;
    }

    .tax-info {
        display: none;
        color: var(--accent-color);
        font-weight: 600;
        font-size: 0.85rem;
    }
</style>

<div class="container-fluid px-md-5">
    <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between mb-3 mt-2">
        <div id="filters" class="flex-grow-1">
            <div class="filter">
                <form action="/listing/toprated">
                    <button type="submit" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-star"></i>
                        <p>Trending</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Hotel" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-hotel"></i>
                        <p>Hotels</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Adventure" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-person-hiking"></i>
                        <p>Adventure</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Resort" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-mountain-city"></i>
                        <p>Iconic cities</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Beach-Related" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-umbrella-beach"></i>
                        <p>Beachfront</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Restaurant" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-mug-hot"></i>
                        <p>Bed & breakfast</p>
                    </button>
                </form>
            </div>

            <div class="filter">
                <form action="/listing/filter" method="get">
                    <button type="submit" name="q" value="Other" style="all: unset; cursor: pointer;">
                        <i class="fa-solid fa-fire"></i>
                        <p>New</p>
                    </button>
                </form>
            </div>
        </div>

        <div class="tax-toggle ms-lg-4 mt-3 mt-lg-0">
            <div class="form-check form-switch form-check-reverse w-100">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault" style="cursor: pointer;">
                <label class="form-check-label" for="switchCheckDefault" style="cursor: pointer; font-size: 0.9rem; font-weight: 500;">Display total before taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-xxl-5 row-cols-xl-4 row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
        <% for(let listing of allListing) { %>
            <div class="col">
                <a href="/listing/<%= listing._id %>" class="listing-link">
                    <div class="card listing-card h-100">
                        <div class="img-container">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing">
                            <div class="heart-icon"><i class="fa-regular fa-heart"></i></div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <span class="listing-title text-truncate"><%= listing.title %></span>
                                
                            </div>
                            <p class="listing-location mb-0">Stay in <%= listing.location || 'Luxury' %></p>
                            <p class="mt-1">
                                <span class="fw-bold text-dark">Rs<%= listing.price ? listing.price.toLocaleString("en-PK") : "N/A" %></span>
                                <span class="text-muted">night</span>
                                <span class="tax-info ms-2">+18% GST</span>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName('tax-info');
        for (let info of taxInfo) {
            info.style.display = taxSwitch.checked ? 'inline' : 'none';
        }
    });
</script>