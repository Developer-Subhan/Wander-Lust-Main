        border-top: 1px solid var(--footer-border);
        padding: 5rem 0 2rem 0;
        font-family: 'Inter', -apple-system, sans-serif;
    }

    /* Grid Layout */
    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    /* Brand Section */
    .footer-brand-side h2 {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--footer-text-main);
        letter-spacing: -1px;
        margin-bottom: 1rem;
    }

    .footer-brand-side p {
        color: var(--footer-text-muted);
        line-height: 1.6;
        font-size: 0.95rem;
