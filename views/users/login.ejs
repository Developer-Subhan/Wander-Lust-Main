<% layout("layouts/boilerplate") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<style>
    :root {
        --brand-gradient: linear-gradient(135deg, #ff385c 0%, #bd1e59 100%);
        --input-focus: #222222;
        --glass-bg: rgba(255, 255, 255, 0.95);
    }

    .login-page-container {
        min-height: 85vh;
        background-color: #f7f7f7;
        display: flex;
        align-items: center;
        justify-content: center;
        perspective: 1000px; /* For 3D tilt effect */
    }

    .login-card {
        background: var(--glass-bg);
        width: 100%;
        max-width: 460px;
        padding: 3.5rem;
        border-radius: 24px;
        border: 1px solid rgba(0,0,0,0.05);
        box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        transform-style: preserve-3d;
        animation: slideUpFade 0.8s ease-out;
    }

    @keyframes slideUpFade {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .brand-icon-circle {
        width: 60px;
        height: 60px;
        background: var(--brand-gradient);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 1.5rem;
        box-shadow: 0 8px 20px rgba(255, 56, 92, 0.3);
    }

    .login-title {
        font-weight: 800;
        letter-spacing: -1px;
        color: #222;
        margin-bottom: 0.5rem;
    }

    /* Professional Input Styling */
    .input-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .input-wrapper i.field-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        transition: color 0.3s;
        z-index: 10;
    }

    .form-control {
        padding: 0.8rem 1rem 0.8rem 45px !important; /* Space for icon */
        border-radius: 14px;
        border: 2px solid #eee;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .form-control:focus {
        border-color: var(--input-focus);
        box-shadow: 0 0 0 4px rgba(0,0,0,0.04);
        transform: translateY(-2px);
    }

    .form-control:focus + i.field-icon {
        color: var(--brand-main);
    }

    /* Submit Button with Ripple Animation */
    .btn-submit {
        background: var(--brand-gradient);
        border: none;
        color: white;
        width: 100%;
        padding: 1rem;
        border-radius: 14px;
        font-weight: 700;
        font-size: 1rem;
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .btn-submit:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 25px rgba(255, 56, 92, 0.4);
    }

    .btn-submit:active {
        transform: scale(0.98);
    }

    .toggle-pass-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #666;
        z-index: 10;
        transition: 0.2s;
    }

    .toggle-pass-icon:hover { color: #222; }

    /* Shake animation for validation errors */
    .was-validated .form-control:invalid {
        animation: shake 0.4s ease-in-out;
    }

    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-5px); }
        75% { transform: translateX(5px); }
    }
</style>

<div class="login-page-container">
    <div class="login-card">
        <div class="brand-icon-circle animate__animated animate__bounceIn">
            <i class="fa-solid fa-compass"></i>
        </div>
        
        <div class="text-center mb-5">
            <h2 class="login-title">Log in to Wanderlust</h2>
            <p class="text-muted small">Enter your credentials to access your account</p>
        </div>

        <form action="/login" method="post" class="needs-validation" novalidate id="loginForm">
            <div class="input-wrapper">
                <i class="fa-solid fa-at field-icon"></i>
                <input type="text" name="username" class="form-control" placeholder="Username" required>
                <div class="invalid-feedback ms-2">Please enter your username.</div>
            </div>

            <div class="input-wrapper">
                <i class="fa-solid fa-lock field-icon"></i>
                <input type="password" name="password" id="passwordInp" class="form-control" placeholder="Password" required>
                <i class="fa-regular fa-eye-slash toggle-pass-icon" id="eyeToggle"></i>
                <div class="invalid-feedback ms-2">Password is required.</div>
            </div>

            <button type="submit" class="btn-submit">
                <span>Continue</span>
                <i class="fa-solid fa-arrow-right ms-2"></i>
            </button>
        </form>

        <div class="mt-4 text-center">
            <span class="text-muted small">New to Wanderlust?</span>
            <a href="/signup" class="small fw-bold text-dark text-decoration-none ms-1">Create an account</a>
        </div>
    </div>
</div>

<script>
    // 1. Password Visibility Toggle with Icon Swap
    const eyeToggle = document.querySelector("#eyeToggle");
    const passwordInp = document.querySelector("#passwordInp");

    eyeToggle.addEventListener("click", () => {
        const isPass = passwordInp.type === "password";
        passwordInp.type = isPass ? "text" : "password";
        
        // Icon swap
        eyeToggle.classList.toggle("fa-eye-slash");
        eyeToggle.classList.toggle("fa-eye");
        
        // Subtle feedback animation
        eyeToggle.style.transform = "translateY(-50%) scale(1.3)";
        setTimeout(() => {
            eyeToggle.style.transform = "translateY(-50%) scale(1)";
        }, 200);
    });

    // 2. Button Loading State Animation
    const loginForm = document.querySelector("#loginForm");
    const submitBtn = document.querySelector(".btn-submit");

    loginForm.addEventListener("submit", (e) => {
        if (loginForm.checkValidity()) {
            submitBtn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Authenticating...';
            submitBtn.style.opacity = "0.8";
        }
    });
</script>